@{
}
<div class="form-outline" style="width: 40%;margin-left:20%">
    <form action="/Home/DoUpdateModule" method="post">
        <input type="hidden" name="vocabInModule.Id" class="form-control" value="@Model.Id">
        <div class="form-group">
            <label>Image:</label>
            <img src="@Model.Image" style="height:150px;width:120px" />
        </div>
        <div class="form-group">
            <label>Word:</label>
            <input type="text" name="vocabulary.Word" class="form-control" placeholder="Enter word" value="@Model.Word">
        </div>
        <div class="form-group">
            <label>Pronunciation:</label>
            <input type="text" name="vocabulary.Pronunciation" class="form-control" placeholder="Enter pronunciation" value="@Model.Pronunciation">
        </div>
        <div class="form-group">
            <label>Means:</label>
            <input type="text" name="vocabulary.Means" class="form-control" placeholder="Enter meaning" value="@Model.Means">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

