<style>
    .form-outline {
        margin-top: 3%;
        position: relative;
        text-align: center;
        border-style: solid;
        border-width: 1px;
        border-color: gray;
        display: inline-block;
    }
</style>

<div class="form-outline" style="width: 40%;margin-left:20%">
    <form action="/Home/DoUpdateWord" method="post">
        <input type="hidden" name="vocabulary.Id" class="form-control" value="@Model.Id">
        <div class="form-group">
            <label>Image:</label>
            <img src="@Model.Image" style="height:150px;width:120px" />
        </div>
        <div class="form-group">
            <label>Module:</label>
            <select class="form-select" name="module.ModuleId">
                @foreach (var i in ViewBag.Module)
                {
                    <option selected="@(i.Id == ViewBag.ModuleId ? "selected" : null)" value="@i.Id">@i.Module1</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label>Word:</label>
            <input type="text" name="vocabulary.Word" class="form-control" placeholder="Enter word" value="@Model.Word">
        </div>
        <div class="form-group">
            <label>Pronunciation:</label>
            <input type="text" name="vocabulary.Pronunciation" class="form-control" placeholder="Enter pronunciation" value="@Model.Pronunciation">
        </div>
        <div class="form-group">
            <label>Meaning:</label>
            <input type="text" name="vocabulary.Meaning" class="form-control" placeholder="Enter meaning" value="@Model.Meaning">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

