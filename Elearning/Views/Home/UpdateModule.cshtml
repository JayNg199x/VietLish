<style>
    .form-outline {
        margin-top: 3%;
        position: relative;
        text-align: center;
        border-style: solid;
        border-width: 1px;
        border-color: gray;
        display: inline-block;
    }
</style>
<div class="form-outline" style="width: 40%;margin-left:20%">
    <form action="/Home/DoUpdateModule" method="post">
        <input type="hidden" name="module.Id" class="form-control" value="@Model.Id">
        <div class="form-group">
            <label>Module name:</label>
            <input type="text" name="module.Module1" class="form-control" placeholder="Enter name" value="@Model.Module1">
        </div>
        <div class="form-group">
            <label>Part:</label>
            <select class="form-select" name="module.PartId">
                @foreach (var i in ViewBag.Part)
                {
                    <option selected="@(i.Id == ViewBag.PartId ? "selected" : null)" value="@i.Id">@i.PartName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label>Level:</label>
            <select class="form-select" name="module.LevelId">
                @foreach (var i in ViewBag.Level)
                {
                    <option selected="@(i.Id == ViewBag.LevelId ? "selected" : null)" value="@i.Id">@i.Level1</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label>Image:</label>
            <img src="@Model.Image" style="height:150px;width:120px" />
            <br /><br />
            <input type="file" value="@Model.Image" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>


