<style>
    .form-outline {
        margin-top: 3%;
        position: relative;
        text-align: center;
        border-style: solid;
        border-width: 1px;
        border-color: gray;
        display: inline-block;
    }
</style>
<div class="form-outline" style="width: 40%;margin-left:20%">
    <form action="/Home/DoAddNewWord" method="post">
        <div class="form-group">
            <label>Word:</label>
            <input type="text" name="vocabulary.Word" class="form-control" placeholder="Enter word">
        </div>
        <div class="form-group">
            <label>Module:</label>
            <select class="form-select form-select-lg mb-3" name="vocabulary.ModuleId">
                <option selected>Open this select part</option>
                @foreach (var i in ViewBag.Module)
                {
                    <option value="@i.Id">@i.Module1</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label>Pronunciation:</label>
            <input type="text" name="vocabulary.Pronunciation" class="form-control" placeholder="Enter pronunciation">
        </div>
        <div class="form-group">
            <label>Meaning:</label>
            <input type="text" name="vocabulary.Meaning" class="form-control" placeholder="Enter meaning">
        </div>

        <div class="form-group">
            <label>Image:</label>
            <input type="file" name="vocabulary.Image" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>